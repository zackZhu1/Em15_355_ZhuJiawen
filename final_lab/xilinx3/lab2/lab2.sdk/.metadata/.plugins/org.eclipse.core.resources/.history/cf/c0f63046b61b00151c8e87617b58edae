//====================================================


XGpio led[4];
int i;

void changeState(int x) {
	for (i=0;i<4;i++) {
		if (i==x)
			XGpio_DiscreteWrite(&led[i],1,0xffffffff);
		else
			XGpio_DiscreteWrite(&led[i],1,0x00000000);
	}
}
void set(int x){
	for (i=0;i<4;i++)
		XGpio_DiscreteWrite(&led[i],1,x);
}

